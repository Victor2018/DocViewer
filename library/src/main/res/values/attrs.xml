<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DocView">
        <attr name="dv_moving_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="dv_quality" format="enum">
            <enum name="fast" value="1" />
            <enum name="normal" value="2" />
            <enum name="enhanced" value="3" />
        </attr>
        <attr name="dv_engine" format="enum">
            <enum name="internal" value="100" />
            <enum name="microsoft" value="200" />
            <enum name="xdoc" value="300" />
            <enum name="google" value="400" />
        </attr>
        <attr name="dv_showDivider" format="boolean" />
        <attr name="dv_show_page_num" format="boolean" />
        <attr name="dv_divider" format="reference" />

        <attr name="dv_enableLoadingForPages" format="reference|boolean" />

        <attr name="dv_page_margin" format="reference|dimension"  />
        <attr name="dv_page_marginLeft" format="reference|dimension"  />
        <attr name="dv_page_marginTop" format="reference|dimension" />
        <attr name="dv_page_marginRight" format="reference|dimension"  />
        <attr name="dv_page_marginBottom" format="reference|dimension"  />

        <attr name="dv_page_pb_height" format="reference|dimension"  />
        <attr name="dv_page_pb_color" format="color"  />
    </declare-styleable>
    <declare-styleable name="ZoomRecyclerView">
        <attr name="min_scale" format="float" />
        <attr name="max_scale" format="float" />
        <attr name="default_scale" format="float" />
        <attr name="zoom_duration" format="integer" />
    </declare-styleable>
</resources>